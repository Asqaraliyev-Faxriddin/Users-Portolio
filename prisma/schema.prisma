generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  avatar_url String
  age       Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  experiences Experience[]
  

  resumes   Resume[]
}

model Resume {
  id          String   @id @default(uuid())
  userId      String
  title       String
  summary     String?
  experience  Int?
  fileUrl     String   
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt()
  
  user User @relation(fields: [userId], references: [id])
}

model Contact {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  phoneNumber String
}

model Experience {
  id          Int     @id @default(autoincrement())
  companyName String
  position    String
  startDate   DateTime
  endDate     DateTime?
  userId      String
  user        User    @relation(fields: [userId], references: [id])
}
